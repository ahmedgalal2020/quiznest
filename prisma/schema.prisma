datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  folders  Folder[]
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  sets   Set[]
}

model Set {
  id         Int         @id @default(autoincrement())
  title      String
  folderId   Int
  folder     Folder      @relation(fields: [folderId], references: [id])
  flashcards Flashcard[]
}

model Flashcard {
  id       Int     @id @default(autoincrement())
  setId    Int
  set      Set     @relation(fields: [setId], references: [id])
  question String
  answer   String
  image    String?
}
